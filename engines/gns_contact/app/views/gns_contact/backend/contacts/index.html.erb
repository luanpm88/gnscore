<% content_for :title do %>
    Contact Management
<% end %>

<% content_for :breadcrumb do %>
    <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
    <span class="breadcrumb-item active">Contacts</span>
<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-address-book mr-2"></i> <span class="font-weight-semibold">Contact</span></h4>
<% end %>

<% content_for :page_toolbar do %>
    <a class="btn btn-primary" href="<%= gns_contact.new_backend_contact_path %>">
        <b><i class="icon-plus22"></i></b> Thêm mới
    </a>
<% end %>

<!-- Datatable -->
<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Contact list</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    
    <div class="card-body">
        <div class="datalist-filters">
            <form action="#">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Full name</label>
                            <select multiple="multiple" data-placeholder="Select a name..." class="form-control select" data-fouc>
                                <option></option>
                                <option value="AZ">Arizona</option>
                                <option value="CO">Colorado</option>
                                <option value="ID">Idaho</option>
                                <option value="WY">Wyoming</option>
                                <option value="AL">Alabama</option>
                                <option value="IA">Iowa</option>
                                <option value="KS">Kansas</option>
                                <option value="KY">Kentucky</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Area (State/City/District)</label>
                            <select data-placeholder="Select a State..." class="form-control select-search" data-fouc>
                                <option></option>
                                <option value="AZ">Arizona</option>
                                <option value="CO">Colorado</option>
                                <option value="ID">Idaho</option>
                                <option value="WY">Wyoming</option>
                                <option value="AL">Alabama</option>
                                <option value="IA">Iowa</option>
                                <option value="KS">Kansas</option>
                                <option value="KY">Kentucky</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Contact types</label>
                            <select class="form-control multiselect" multiple="multiple" data-button-width="auto" data-fouc>
                                <option value="cheese">Customer</option>
                                <option value="tomatoes">Supplier</option>
                                <option value="mozarella">Agent</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="text-right pt-4">
                            <button type="submit" class="btn btn-primary ml-3">Search <i class="icon-search4 ml-2"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card-body">    
        <div class="datalist-header">
            <div class="keyword-search">
                <label>
                    <span>Filter:</span>
                    <input type="search" class="" placeholder="Type to filter...">
                </label>
            </div>
            <div class="show-length">
                <label>
                    <span>Show:</span>
                    <select class="select">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </label>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr class="bg-info-700">
                    <th>Code</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @contacts.each_with_index do |contact,index| %>
                    <tr>
                        <td>#CUS<%= index + 1 %></td>
                        <td><%= contact.full_name %></td>
                        <td><%= contact.email %></td>
                        <td><%= contact.phone %></td>
                        <td><%= contact.address %></td>
                        <td title="<%= contact.created_at.strftime("%d/%m/%Y - %T") %>">
                            <%= contact.created_at.strftime("%d/%m/%Y") %>
                        </td>
                        <td>
                            <span class="badge badge-success">Active</span>
                        </td>
                        <td class="text-center">
                            <div class="list-icons">
                                <div class="dropdown">
                                    <a href="#" class="list-icons-item" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>
    
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a href="#" class="dropdown-item">
                                            <i class="icon-file-eye"></i> View
                                        </a>
                                        <a class="dropdown-item"
                                            href="<%= gns_contact.edit_backend_contact_path(contact) %>">
                                            <i class="icon-pencil7"></i> Update
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item"
                                            href="<%= gns_contact.backend_contact_path(contact) %>"
                                            data-method="DELETE"
                                            data-confirm="Are you sure?"
                                        >
                                            <i class="icon-bin"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        
        <div class="datatable-footer">
            <div class="dataTables_info">Showing 1 to 10 of 19 entries</div>
        
            <div class="dataTables_paginate paging_simple_numbers">
                <ul class="pagination align-self-center">
                    <li class="page-item"><a href="#" class="page-link">Prev</a></li>
                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item disabled"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- /datatable -->