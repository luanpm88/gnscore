<% content_for :title do %>
    Show Contact
<% end %>

<% content_for :breadcrumb do %>
    <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
    <a href="#" class="breadcrumb-item">Contacts</a>
    <span class="breadcrumb-item active">Show</span>
<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-address-book mr-2"></i> <span class="font-weight-semibold">Contact</span> - Show: <%= @contact.full_name %></h4>
<% end %>

<% content_for :page_toolbar do %>
    <a class="btn btn-primary" href="<%= gns_contact.new_backend_contact_path %>">
        <b><i class="icon-plus22"></i></b> Thêm mới
    </a>
<% end %>

<% content_for :page_script do %>
    <script>
        $(document).ready(function() {
            // Select2 ajax
            $('.select-ajax-district').each(function() {
                var url = $(this).attr('data-url');
                
                $(this).select2({
                    ajax: {
                        url: url,
                        dataType: 'json',
                        data: function (params) {
                            console.log(params);
                            var query = {
                                q: params.term,
                                page: params.page,
                                type: 'public',
                                state_id: $('select[name=state_id]').select2('val')
                            }
                      
                            // Query parameters will be ?search=[term]&type=public
                            return query;
                        }
                    }
                }); 
            });     
        });
    </script>
<% end %>

<div class="row">
    <div class="col-md-12">
        
        <!-- Bottom tabs -->
        <div class="card">
          
            <%= render "contact_menu", title: 'Project List', tab: 'projects' %>
          
            <!-- Datatable -->
            <div class="datalist"
                data-url="<%= gns_project.list_backend_projects_path %>"
            >                                
                <form class="datalist-filters">
                    <div class="card-body pb-0">    
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select name="state_id" data-placeholder="Select a State..." class="form-control select-search select" data-fouc>
                                        <option></option>
                                        <option value="AZ">Arizona</option>
                                        <option value="CO">Colorado</option>
                                        <option value="ID">Idaho</option>
                                        <option value="WY">Wyoming</option>
                                        <option value="AL">Alabama</option>
                                        <option value="IA">Iowa</option>
                                        <option value="KS">Kansas</option>
                                        <option value="KY">Kentucky</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select name="types[]" data-placeholder="Select types..." class="form-control select" multiple="multiple" data-fouc>
                                        <option value="customer">Customer</option>
                                        <option value="supplier">Supplier</option>
                                        <option value="agent">Agent</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4 text-right">
                                <span class="btn btn-primary mb-3 datalist-search-button">Go</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <div class="datalist-header flex space-between">
                            <div class="keyword-search mr-2">
                                <input class="form-control keyword-input" name="keyword" type="search" placeholder="Type to filter...">
                            </div>
                            <div class="text-right text-nowrap flex">
                                <div class="sort-by-box flex align-center mr-3">
                                    <span class="mr-1">Sort by:</span>
                                    <select name="sort_by" data-placeholder="Sort by..." class="form-control selectPrimary sort-by-select" data-fouc>
                                        <option value="created_at">Created At</option>
                                        <option value="code">Code</option>
                                        <option value="name">Name</option>
                                    </select>
                                    <input class="sort-direction" type="hidden" name="sort_direction" value="desc" />
                                </div>
                                <div class="show-per-page flex align-center">
                                    <span class="mr-1">Per page:</span>
                                    <select name="per_page" class="form-control selectPrimary per-page-select">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <div class="table-responsive datalist-content">
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>