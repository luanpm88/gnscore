<% content_for :title do %>
    Add New Contact Person
<% end %>

<% content_for :breadcrumb do %>
    <a href="<%= gns_core.root_path %>" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
    <a href="<%= gns_contact.backend_contacts_path %>" class="breadcrumb-item">Contacts</a>
    <span class="breadcrumb-item active">Create</span>
<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-address-book mr-2"></i> <span class="font-weight-semibold">Contact</span> - Create</h4>
<% end %>

<% content_for :page_script do %>
    <script>
        $(document).ready(function() {
            $('.new_contact').submit(function(e) {
                e.preventDefault();
                
                var form = $(this);
                
                // clear modal before ajax run
                subcontact_modal.clear();
                
                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method'),
                    data: form.serialize() + '&layout=modal',
                }).done(function(response) {
                    // do something
                    if (typeof(newSubContactCallback) !== 'undefined') {
                        newSubContactCallback(response);
                    }
                });
                
                return false;
            });
        });
    </script>
<% end %>

<div class="row">
    <div class="col-lg-12 col-md-12">
        
        <% if @contact.errors.any? %>
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                <span class="font-weight-semibold">Oh snap!</span> Check a few things up (below) and try submitting again.
            </div>
        <% end %>
        
        <div class="card">
            <div class="card-header header-elements-inline bg-white">
                <h5 class="card-title">Details</h5>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <%= form_for(@contact, url: gns_contact.subcontact_create_backend_contacts_path, html: {multipart: true}) do |f| %>
                    <%= render 'subcontact_form', contact: @contact %>
                    <hr class="mt-0">
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                <% end %>
            </div>
        </div>
        
    </div>
</div>