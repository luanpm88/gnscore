<div class="card">
    <div class="card-header bg-white header-elements-inline">
        <h6 class="card-title">History Attachment</h6>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <ul class="media-list">
            <div class="row">
                <div class="col-md-6">
                    <li class="media mt-0 py-2 px-2">
                        <div class="media-body">
                            <div class="font-weight-semibold">Task Description:</div>
                        </div>

                        <div class="ml-3 align-self-center">
                            Thiết kế bản vẽ số 1
                        </div>
                    </li>
                </div>
            </div>
        </ul>
        
        <div class="    ">
            <table class="table">
                <thead>
                    <tr class="alpha-primary">
                        <th>No.</th>
                        <th>Document</th>
                        <th>Update Date</th>
                        <th>Change Description</th>
                        <th>Changed By</th>
                    </tr>
                </thead>
                <tbody>
                    <% (1..3).each_with_index do |history,index| %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td>Bản vẽ số 1</td>
                            <td><%= Time.now.strftime("%d/%m/%Y") %></td>
                            <td>Chinh noi dung A</td>
                            <td>Nguyen Van A</td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>