<% content_for :title do %>
    New Attachment
<% end %>

<% content_for :breadcrumb do %>
    <a href="<%= gns_core.root_path %>" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
    <a href="<%= gns_project.backend_attachments_path %>" class="breadcrumb-item">Attachments</a>
    <span class="breadcrumb-item active">Create</span>
<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-address-book mr-2"></i> <span class="font-weight-semibold">Attachment</span> - Create</h4>
<% end %>

<% content_for :page_script do %>
    <script>
        $(document).ready(function() {
            $('.new_attachment').submit(function(e) {
                e.preventDefault();
                
                var form = $(this);
                var formData = new FormData($(this)[0]);
                formData.append('layout', 'modal');
                
                // clear modal
                attachment_modal.clear();
                
                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method'),
                    data: formData,
                    processData: false,  // tell jQuery not to process the data
                    contentType: false,
                }).done(function(response) {
                    // do something
                    if (typeof(newAttachmentCallback) !== 'undefined') {
                        newAttachmentCallback(response);
                    }
                });
                
                return false;
            });
        });
    </script>
<% end %>


<div class="row">
    <div class="col-lg-12 col-md-12">
        
        <% if @attachment.errors.any? %>
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                <span class="font-weight-semibold">Oh snap!</span> Check a few things up (below) and try submitting again.
            </div>
        <% end %>
        
        <div class="card">
            <div class="card-body">
                <%= render 'form', attachment: @attachment %>
            </div>
        </div>
        
    </div>
</div>