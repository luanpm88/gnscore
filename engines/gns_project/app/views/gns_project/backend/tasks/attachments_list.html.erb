<table class="table">
    <thead>
        <tr class="alpha-primary">
            <th>No.</th>
            <th>Attached File</th>
            <th>Size</th>
            <th>Uploaded At</th>
            <th class="text-center" style="width: 100px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @attachments.each_with_index do |att,index| %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= att.name %></td>
                <td><%= number_to_human_size(att.size) %></td>
                <td><%= att.uploaded_at.strftime("%d/%m/%Y - %I:%M %p") %></td>
                <td class="text-center">
                    <div class="list-icons">
                        <div class="dropdown">
                            <a href="#" class="list-icons-item" data-toggle="dropdown">
                                <i class="icon-menu9"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">                                
                                <a class="dropdown-item insert-below-attachment-button disabled"
                                    href="#">
                                    <i class="icon-plus-circle2"></i> Insert below
                                </a>
                                
                                <a class="dropdown-item"
                                   href="<%= gns_project.download_backend_attachments_path(att) %>">
                                    <i class="icon-download"></i> Download
                                </a>
                                
                                <a class="dropdown-item attachment-logs-list-button"
                                   href="<%= gns_project.backend_attachment_path %>">
                                    <i class="icon-history"></i> Logs attached
                                </a>
                                
                                <div class="dropdown-divider"></div>
                                
                                <a class="dropdown-item disabled"
                                    href="#"
                                    data-method="DELETE"
                                    data-confirm="You are about to delete a file"
                                >
                                    <i class="icon-bin"></i> Remove
                                </a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% if @attachments.empty? %>
    <div class="text-center mt-3 text-danger">No attachments uploaded</div>
<% end %>