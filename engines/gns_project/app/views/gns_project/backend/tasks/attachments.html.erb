<table class="table">
    <thead>
        <tr class="alpha-primary">
            <th>No.</th>
            <th>Attached File</th>
            <th>Size</th>
            <th>Upload Date</th>
            <th class="text-center" style="width: 100px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% (1..3).each_with_index do |attach,index| %>
            <tr>
                <td><%= index + 1 %></td>
                <td>Bản vẽ số <%= index + 1 %></td>
                <td><%= '15KB' %></td>
                <td><%= Time.now.strftime("%d/%m/%Y") %></td>
                <td class="text-center">
                    <div class="list-icons">
                        <a class="list-icons-item mr-2" title="Insert below"
                            href="#">
                            <i class="icon-plus-circle2"></i>
                        </a>
                        
                        <a class="list-icons-item" title="Download attachment"
                           href="#">
                            <i class="icon-download"></i>
                        </a>
    
                        <a class="list-icons-item ajax" title="Remove attachment"
                            href="#"
                            data-method="DELETE"
                            data-confirm="You are about to delete a file"
                        >
                            <i class="icon-bin"></i>
                        </a>
                        
                        <a class="list-icons-item history-attachment-list-button" title="History (Logs)"
                           href="<%= gns_project.history_backend_attachments_path %>">
                            <i class="icon-history"></i>
                        </a>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>