<% content_for :title do %>
    Project Type
<% end %>

<% content_for :breadcrumb do %>
    <a href="<%= gns_core.root_path %>" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
    <span class="breadcrumb-item active">Project Types</span>
<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-address-book mr-2"></i> <span class="font-weight-semibold">Type</span></h4>
<% end %>

<% content_for :page_toolbar do %>
    <% if can? :create, GnsProject::Category %>
        <a class="btn btn-primary add-category-button"
            href="<%= gns_project.new_backend_category_path %>">
            <b><i class="icon-plus22"></i></b> Create Type
        </a>
    <% end %>
<% end %>

<% content_for :page_script do %>
    <script>
        // global modal
        var category_modal = new gModal({size: 'md'});
        var updateCategoryCallback;
        var newCategoryCallback;
        
        $(function() {            
            $('.add-category-button').click(function(e) {
                e.preventDefault();
                var button = $(this);
                
                category_modal.load(button.attr('href'));
                
                newCategoryCallback = function(response) {
                    if (typeof(response.status) !== 'undefined') {
                        showNotification(response.status, response.message);
                        // Hide modal
                        category_modal.hide();
                        datalists.forEach(function(datalist) {
                            datalist.refresh();
                        });     
                    } else if (typeof(response.redirect) !== 'undefined') {
                        window.location = response.redirect;
                    } else {
                        // validation error
                        category_modal.renderHtml(response);
                    }
                };
            });
            
            $(document).on('click', '.edit-category-button', function(e) {
                e.preventDefault();
                
                var button = $(this);
                
                // load modal edit category
                category_modal.load(button.attr('href'));
                
                // after update category event
                updateCategoryCallback = function(response) {
                    if (typeof(response.status) !== 'undefined') {
                        showNotification(response.status, response.message);
                        // Hide modal
                        category_modal.hide();
                        datalists[button.closest('.datalist').attr('data-id')].refresh();
                    } else if (typeof(response.redirect) !== 'undefined') {
                        window.location = response.redirect;
                    } else {
                        // validation error
                        category_modal.renderHtml(response);
                    }
                };
            });
        });
    </script>
<% end %>

<!-- Datatable -->
<div class="card datalist"
    data-url="<%= gns_project.list_backend_categories_path %>"
>
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Project type list</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
            </div>
        </div>
    </div>
    
    <form class="datalist-filters">
        <div class="card-body pb-0">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <select name="active" data-placeholder="Filter by status..."
                            class="form-control selectAllowClear" data-fouc>
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-9 text-right">
                    <span class="btn btn-primary mb-3 datalist-search-button">Go</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="datalist-header flex space-between">
                <div class="keyword-search mr-2">
                    <input class="form-control keyword-input" name="keyword" type="search" placeholder="Type to filter...">
                </div>
                <div class="text-right text-nowrap flex">
                    <div class="sort-by-box flex align-center mr-3">
                        <span class="mr-1">Sort by:</span>
                        <select name="sort_by" data-placeholder="Sort by..." class="form-control selectPrimary sort-by-select" data-fouc>
                            <option value="name">name</option>
                            <option value="created_at">created_at</option>
                        </select>
                        <input class="sort-direction" type="hidden" name="sort_direction" value="desc" />
                    </div>
                    <div class="show-per-page flex align-center">
                        <span class="mr-1">Per page:</span>
                        <select name="per_page" class="form-control selectPrimary per-page-select">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="datalist-content">
            
        </div>
    </form>
</div>