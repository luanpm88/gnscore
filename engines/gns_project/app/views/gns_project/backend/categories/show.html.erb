                                    </tr>
                                    <tr>
                                        <td class="font-weight-semibold">Created:</td>
                                        <td class="text-right text-muted">25 Feb, 2015</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /bottom tabs -->
        
        <div class="card">
            <div class="card-header header-elements-inline">
                <h6 class="card-title font-weight-semibold">Stage List</h6>
                <div class="header-elements">
                    <a href="<%= gns_project.new_backend_stage_path(category_id: @category.id) %>" class="btn bg-blue mr-3 add-stage-button">Add stage</a>
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                        <a class="list-icons-item" data-action="remove"></a>
                    </div>
                </div>
            </div>

            <div class="table-responsive stage-list" style="position: relative; min-height: 130px">
                
            </div>
        </div>
        
    </div>
</div>