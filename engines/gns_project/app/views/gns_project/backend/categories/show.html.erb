<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-address-book mr-2"></i> <span class="font-weight-semibold">Project Category</span> - <%= @category.name %></h4>
<% end %>

<% content_for :page_toolbar do %>
    <a class="btn btn-primary" href="<%= gns_project.new_backend_project_path %>">
        <b><i class="icon-plus22"></i></b> Thêm mới
    </a>
<% end %>

<% content_for :page_script do %>
    <script>
        // global modal cho việc tạo mới stage
        var modal;
        var ajax_box;
        $(function() {
            $('.add-stage-button').click(function(e) {
                e.preventDefault();
                
                modal = new gModal(); // gModal hiện có sẵn hàm load, renderHtml, clear
                modal.load($(this).attr('href'));
            });
            
            $(document).on('click', '.edit-stage-button', function(e) {
                e.preventDefault();
                
                modal = new gModal(); // gModal hiện có sẵn hàm load, renderHtml, clear
                modal.load($(this).attr('href'));
            });
            
            // ajax box stage list
            ajax_box = new ajaxBox($('.stage-list'), '<%= gns_project.stages_backend_categories_path(@category.id) %>');
            ajax_box.load();
        });
    </script>
<% end %>

