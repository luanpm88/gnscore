<%= form_for([gns_project, :backend, project], html: {multipart: true}) do |f| %>

    <fieldset>
        
        <div class="form-group">
            <label class="d-block font-weight-semibold">Code <span class="text-danger">*</span></label>
            <input type="text" class="form-control <%= 'border-danger' if project.errors.full_messages_for(:code).present? %>" placeholder="Enter name"
                name="project[code]"
                value="<%= project.code %>"
            >
            <% if project.errors.full_messages_for(:code).present? %>
                <span class="form-text text-danger"><%= project.errors.full_messages_for(:code).join('<br/>').html_safe %></span>
            <% end %>
        </div>
        
        <div class="form-group">
            <label class="d-block font-weight-semibold">Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control <%= 'border-danger' if project.errors.full_messages_for(:name).present? %>" placeholder="Enter name"
                name="project[name]"
                value="<%= project.name %>"
            >
            <% if project.errors.full_messages_for(:name).present? %>
                <span class="form-text text-danger"><%= project.errors.full_messages_for(:name).join('<br/>').html_safe %></span>
            <% end %>
        </div>
        
        <div class="form-group">
            <label class="d-block font-weight-semibold">Category</label>
            <select name="project[category_id]" data-placeholder="Select category" class="form-control select form-control-select2" data-fouc>
                <option></option>
                <option value="1">Khách hàng</option> 
                <option value="2">Nhà cung cấp</option>
            </select>
            <% if project.errors.full_messages_for(:category_id).present? %>
                <span class="form-text text-danger"><%= project.errors.full_messages_for(:category_id).join('<br/>').html_safe %></span>
            <% end %>
        </div>
        
    </fieldset>
    
    <hr class="mt-0">
    <div class="text-left">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-light ml-1" href="<%= gns_project.backend_projects_path %>">
            Cancel
        </a>
    </div>
<% end %>

<% content_for :page_script do %>
    <script>
        
    </script>
<% end %>