<%= form_for([gns_project, :backend, project], html: {multipart: true}) do |f| %>

    <fieldset>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="d-block font-weight-semibold">Code <span class="text-danger">*</span></label>
                    <input type="text" class="form-control <%= 'border-danger' if project.errors.full_messages_for(:code).present? %>" placeholder="Enter name"
                        name="project[code]"
                        value="<%= project.code %>"
                    >
                    <% if project.errors.full_messages_for(:code).present? %>
                        <span class="form-text text-danger"><%= project.errors.full_messages_for(:code).join('<br/>').html_safe %></span>
                    <% end %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="d-block font-weight-semibold">Category</label>
                    <select name="project[category_id]" data-placeholder="Select category..."
                        class="form-control select-ajax"
                        data-url="<%= gns_project.select2_backend_categories_path %>">
                        <option value="<%= project.category_id %>"><%= project.category_name %></option>
                    </select>
                    <% if project.errors.full_messages_for(:category_id).present? %>
                        <span class="form-text text-danger"><%= project.errors.full_messages_for(:category_id).join('<br/>').html_safe %></span>
                    <% end %>
                </div>
            </div>
        </div>
            
        <div class="form-group">
            <label class="d-block font-weight-semibold">Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control <%= 'border-danger' if project.errors.full_messages_for(:name).present? %>" placeholder="Enter name"
                name="project[name]"
                value="<%= project.name %>"
            >
            <% if project.errors.full_messages_for(:name).present? %>
                <span class="form-text text-danger"><%= project.errors.full_messages_for(:name).join('<br/>').html_safe %></span>
            <% end %>
        </div>
        
        <div class="form-group">
            <label class="d-block font-weight-semibold">Customer</label>
            <select name="project[customer_id]" data-placeholder="Select customer..."
                class="form-control select-ajax"
                data-url="<%= gns_contact.select2_backend_contacts_path %>">
                <option value="<%= project.customer_id %>"><%= project.customer_name %></option>
            </select>
            <% if project.errors.full_messages_for(:customer_id).present? %>
                <span class="form-text text-danger"><%= project.errors.full_messages_for(:customer_id).join('<br/>').html_safe %></span>
            <% end %>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="d-block">Starting Date</label>
                    <div class="input-group">
                        <span class="input-group-prepend">
                            <span class="input-group-text"><i class="icon-calendar22"></i></span>
                        </span>
                        <input type="text" class="form-control font-weight-semibold daterange-single" value="" name="contact[birthday]">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="d-block">Gender <span class="text-danger">*</span></label>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-weight-semibold">
                            <input type="radio" class="radio-button" name="contact[gender]" value="male" checked data-fouc>
                            Male
                        </label>
                    </div>

                    <div class="form-check form-check-inline">
                        <label class="form-check-label font-weight-semibold">
                            <input type="radio" class="radio-button" name="contact[gender]" value="female" data-fouc>
                            Female
                        </label>
                    </div>
                </div>
            </div>
        </div>
        
    </fieldset>
    
    <hr class="mt-0">
    <div class="text-left">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-light ml-1" href="<%= gns_project.backend_projects_path %>">
            Cancel
        </a>
    </div>
<% end %>

<% content_for :page_script do %>
    <script>
        
    </script>
<% end %>