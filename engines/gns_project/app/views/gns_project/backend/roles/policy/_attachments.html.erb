<div class="tab-pane fade" id="tabAttachment">
    <div class="card-group-control card-group-control-left" id="accordion-control">

        <div class="pt-2 pb-2 permissions-box">
            <div class="d-sm-flex justify-content-sm-between align-items-sm-center">
                <h6 class="card-title mb-1">
                    <a data-toggle="collapse" class="text-default text-uppercase text-blue-800"
                       href="#gnsProject-attachments"><%= t('.attachments')%>
                    </a>
                </h6>
                <div>
                    <button type="button" class="btn btn-link p-0 select_all_permissions_on"><%= t('.select_all') %></button>
                    <i class="icon-primitive-dot text-muted font-size-sm"></i>
                    <button type="button" class="btn btn-link p-0 select_all_permissions_off"><%= t('.deselect_all')%></button>
                </div>
            </div>
            
            <div id="gnsProject-attachments" class="collapse show">
                <table class="table table-xs">
                    <tbody>
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.create]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.create]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.create"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.create') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.create"><%= t('.create_upload')%></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b><%= t('.create')%></b> <%= t('.and')%> <b><%= t('.upload')%></b> <%= t('.new_attachment')%></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">                                
                                    <input type="hidden" name="permissions[gns_project.attachments.update_own]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.update_own]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.update_own"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.update_own') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.update_own"><%= t('.update_reupload_own')%></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b><%= t('.update_info')%></b> <%= t('.or')%> <b><%= t('.reupload_file')%></b> <%= t('.their_own_attachments')%></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">                                
                                    <input type="hidden" name="permissions[gns_project.attachments.update_other]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.update_other]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.update_other"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.update_other') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.update_other"><%= t('.update_reupload_other')%></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b> <%= t('.update_info')%></b> <%= t('.or')%> <b><%= t('.reupload_file')%> </b> <%= t('.other_peoples_attachments')%></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.download_own]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.download_own]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.download_own"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.download_own') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.download_own"><%= t('.download_own')%></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to') %><b><%= t('.download') %></b> <%= t('.their_own_attachments') %></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.download_other]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.download_other]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.download_other"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.download_other') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.download_other"><%= t('.download_other') %></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b><%= t('.download') %></b> <%= t('.other_peoples_attachments')%></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.view_logs_own]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.view_logs_own]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.view_logs_own"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.view_logs_own') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.view_logs_own"><%= t('.view_logs_own') %></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b><%= t('.view_logs')%></b> <%= t('.their_own_attachments') %></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.view_logs_other]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.view_logs_other]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.view_logs_other"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.view_logs_other') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.view_logs_other"><%= t('.view_logs_other') %></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b><%= t('.view_logs')%></b><%= t('.other_peoples_attachments')%></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.delete_own]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.delete_own]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.delete_own"
                                        <%= 'checked' if @role.has_permission?('gns_project.attachments.delete_own') %>
                                    >
                                    <label class="custom-control-label" for="gns_project.attachments.delete_own"><%= t('.delete_own') %></label>
                                </div>
                            </td>
                            <td><%= t('.allow_users_to')%> <b><%= t('.delete')%></b> <%= t('.their_own_attachments_created') %></td>
                        </tr>
                        
                        <tr>
                            <td width="30%">
                                <div class="custom-control custom-checkbox">
                                    <input type="hidden" name="permissions[gns_project.attachments.delete_other]" value="false">
                                    <input type="checkbox" name="permissions[gns_project.attachments.delete_other]" value="true"
                                        class="custom-control-input"
                                        id="gns_project.attachments.delete_other"
