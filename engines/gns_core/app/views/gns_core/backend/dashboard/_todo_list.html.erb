<% @todo_list = GnsProject::Task.get_todo_list(current_user).order('updated_at desc') %>

<div class="card">
    <div class="card-header header-elements-sm-inline">
        <h6 class="card-title">TODO LIST</h6>
        <div class="header-elements">
            <span class="badge bg-success badge-pill"><%= @todo_list.count %> task(s)</span>
            
            <div class="list-icons ml-3">
                <a href="#" class="list-icons-item"><i class="icon-sync"></i></a>
                <a class="list-icons-item" data-action="collapse"></a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th class="text-nowrap">Project Name</th>
                <th class="text-nowrap">Tasks</th>
                <th class="text-nowrap">Remark</th>
                <th class="text-nowrap">Status</th>
                <th class="text-nowrap">Updated at</th>
            </tr>
        </thead>
        <tbody>
            <% @todo_list.each do |task| %>
                <tr>
                    <td>
                            <%= task.project.name %>
                    </td>
                    <td>
                        <a href="#">
                            <div class="text-default font-weight-semibold"><%= task.name %></div>
                            <span class="text-muted font-size-sm"><%= task.stage_name %></span>
                        </a>
                    </td>
                    <td>
                        <%= task.get_latest_remark_log %>
                    </td>
                    <td>
                        <% if task.status == GnsProject::Task::STATUS_OPEN %>
                            <div class="text-muted font-size-sm text-nowrap"><span class="badge badge-mark border-blue mr-1"></span> Opening</div>
                        <% end %>                        
                        
                        <% if task.finished? %>
                            <div class="text-muted font-size-sm text-nowrap"><span class="badge badge-mark border-success mr-1"></span> Finished</div>
                        <% else %>
                            <div class="text-muted font-size-sm text-nowrap"><span class="badge badge-mark border-danger mr-1"></span> Working</div>
                        <% end %>
                    </td>
                    <td>
                        <%= task.updated_at.strftime("%d/%m/%Y") %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <% if @todo_list.empty? %>
        <div class="alert text-center text-warning mb-0">
            There is no task on the list to do
        </div>
    <% end %>
</div>