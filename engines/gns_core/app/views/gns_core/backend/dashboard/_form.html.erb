<form action="#">
    
    <div class="row">
        
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="card-img-actions mx-1 mt-1" style="width: 143px; height: 143px;">
                            <img class="card-img img-fluid" src="/gns_ux/assets/backend/global/images/placeholders/placeholder.jpg" alt="">
                            <div class="card-img-actions-overlay card-img">
                                <a href="#" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round">
                                    <i class="icon-plus3"></i>
                                </a>
            
                                <a href="#" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round ml-2">
                                    <i class="icon-link"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.code') %></label>
                        <input type="text" class="form-control" placeholder="Enter code (or Generate code automatically)">
                    </div>
                    
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.contact_type') %></label>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="is_customer">
                            <label class="custom-control-label" for="is_customer"><%= t('.customer') %></label>
                        </div>
        
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="is_supplier">
                            <label class="custom-control-label" for="is_supplier"><%= t('.supplier') %></label>
                        </div>
        
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="is_agent">
                            <label class="custom-control-label" for="is_agent"><%= t('.agent') %></label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="d-block font-weight-semibold"><%= t('.fullname') %></label>
                <input type="text" class="form-control" placeholder="Enter full name">
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.phone') %></label>
                        <input type="text" class="form-control" placeholder="+84-99-9999-9999">
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold">Email</label>
                        <input type="text" class="form-control" placeholder="username@sao-ee.vn">
                    </div>
                </div>
            </div>
            
        </div>
        
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.birthday') %></label>
                        <div class="input-group">
                            <span class="input-group-prepend">
                                <span class="input-group-text"><i class="icon-calendar22"></i></span>
                            </span>
                            <input type="text" class="form-control daterange-single" value="03/18/2013">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.gender') %></label>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-input-styled" name="gender" checked data-fouc>
                                <%= t('.male') %>
                            </label>
                        </div>

                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-input-styled" name="gender" data-fouc>
                                <%= t('.female') %>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.country') %></label>
                        <select data-placeholder="Select country" class="form-control form-control-select2" data-fouc>
                            <option></option>
                            <option value="1"><%= t('.canada') %><%= t('.canada') %></option> 
                            <option value="2"><%= t('.usa') %></option> 
                            <option value="3"><%= t('.australia') %></option> 
                            <option value="4"><%= t('.germany') %></option> 
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.state_province') %></label>
                        <select data-placeholder="Select state/province" class="form-control form-control-select2" data-fouc>
                            <option></option>
                            <option value="1"><%= t('.canada') %></option> 
                            <option value="2"><%= t('.usa') %></option> 
                            <option value="3"><%= t('.australia') %></option> 
                            <option value="4"><%= t('.germany') %></option> 
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.district_town_city') %></label>
                        <select data-placeholder="Select district/town/city" class="form-control form-control-select2" data-fouc>
                            <option></option>
                            <option value="1"><%= t('.canada') %></option> 
                            <option value="2"><%= t('.usa') %></option> 
                            <option value="3"><%= t('.australia') %></option> 
                            <option value="4"><%= t('.germany') %></option> 
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.address') %></label>
                        <input type="text" class="form-control" placeholder="Enter address">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">                    
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.contact_group') %></label>
                        <select data-placeholder="Select contact group" class="form-control form-control-select2" data-fouc>
                            <option></option>
                            <option value="1"><%= t('.canada') %></option> 
                            <option value="2"><%= t('.usa') %></option> 
                            <option value="3"><%= t('.australia') %></option> 
                            <option value="4"><%= t('.germany') %></option> 
                        </select>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="d-block font-weight-semibold"><%= t('.parent_contact') %></label>
                        <select data-placeholder="Select parent contact" class="form-control form-control-select2" data-fouc>
                            <option></option>
                            <option value="1"><%= t('.canada') %></option> 
                            <option value="2"><%= t('.usa') %></option> 
                            <option value="3"><%= t('.australia') %></option> 
                            <option value="4"><%= t('.germany') %></option> 
                        </select>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
    <div class="text-right">
        <button type="submit" class="btn btn-primary"><%= t('.submit_form') %> <i class="icon-paperplane ml-2"></i></button>
    </div>
    
</form>