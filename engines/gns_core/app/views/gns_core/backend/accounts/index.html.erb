<% content_for :title do %>
    <%= t('.my_account') %>
<% end %>

<% content_for :breadcrumb do %>
    <a href="<%= gns_core.root_path %>" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> <%= t('.home') %></a>
    <span class="breadcrumb-item active"> <%= t('.my_account') %></span>
<% end %>

<% content_for :page_title do %>
    <h4><i class="icon-users mr-2"></i> <span class="font-weight-semibold"><%= t('.my_account') %></span></h4>
<% end %>

<!-- Inner container -->
<div class="d-flex align-items-start flex-column flex-md-row">

    <!-- Left content -->
    <div class="tab-content w-100 overflow-auto order-2 order-md-1">
        
        <!-- Profile info -->
        <div class="card">
            <div class="card-header bg-transparent header-elements-inline">
                <h5 class="card-title"><%= t('.profile_information') %></h5>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form action="#">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><%= t('.username') %></label>
                                <input type="text" value="Eugene" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label><%= t('.fullname') %></label>
                                <input type="text" value="Kopyov" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><%= t('.address_line_1') %></label>
                                <input type="text" value="Ring street 12" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label><%= t('.address_line_2') %></label>
                                <input type="text" value="building D, flat #67" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4">
                                <label><%= t('.city') %></label>
                                <input type="text" value="Munich" class="form-control">
                            </div>
                            <div class="col-md-4">
                                <label><%= t('.state_province') %></label>
                                <input type="text" value="Bayern" class="form-control">
                            </div>
                            <div class="col-md-4">
                                <label><%= t('.zip_code') %></label>
                                <input type="text" value="1031" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                                <input type="text" readonly="readonly" value="eugene@kopyov.com" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label><%= t('.your_country') %></label>
                                <select class="form-control form-control-select2" data-fouc>
                                    <option value="germany" selected><%= t('.germany') %></option> 
                                    <option value="france"><%= t('.france') %></option> 
                                    <option value="spain"><%= t('.spain') %></option> 
                                    <option value="netherlands"><%= t('.netherlands') %></option> 
                                    <option value="other">...</option> 
                                    <option value="uk"><%= t('.united_kingdom') %></option> 
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><%= t('.phone') %></label>
                                <input type="text" value="+99-99-9999-9999" class="form-control">
                                <span class="form-text text-muted">+99-99-9999-9999</span>
                            </div>

                            <div class="col-md-6">
                                <label><%= t('.upload_profile_image') %></label>
                                <input type="file" class="form-input-styled" data-fouc>
                                <span class="form-text text-muted"><%= t('.accepted_formats') %></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary"><%= t('.save_changes') %></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /profile info -->


        <!-- Account settings -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title"><%= t('.account_settings') %></h5>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                        <a class="list-icons-item" data-action="reload"></a>
                        <a class="list-icons-item" data-action="remove"></a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form action="#">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><%= t('.username') %></label>
                                <input type="text" value="Kopyov" readonly="readonly" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label><%= t('.current_password') %></label>
                                <input type="password" value="password" readonly="readonly" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><%= t('.new_password') %></label>
                                <input type="password" placeholder="<%= t('.enter_new_password') %>" class="form-control">
                            </div>

                            <div class="col-md-6">
                                <label><%= t('.repeat_password') %></label>
                                <input type="password" placeholder="<%= t('.repeat_new_password') %>" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label><%= t('.profile_visibility') %></label>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" name="visibility" class="form-input-styled" checked data-fouc>
                                        <%= t('.visible_to_everyone') %>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" name="visibility" class="form-input-styled" data-fouc>
                                        <%= t('.visible_to_friends_only') %>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" name="visibility" class="form-input-styled" data-fouc>
                                        <%= t('.visible_to_my_connections_only') %>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" name="visibility" class="form-input-styled" data-fouc>
                                       <%= t('.visible_to_my_colleagues_only') %>
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label><%= t('.notifications') %></label>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-input-styled" checked data-fouc>
                                        <%= t('.password_expiration_notification') %>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-input-styled" checked data-fouc>
                                        <%= t('.new_message_notification') %>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-input-styled" checked data-fouc>
                                        <%= t('.new_task_notification') %>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-input-styled">
                                         <%= t('.new_contact_request_notification') %>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary"><%= t('.save_changes') %></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /account settings -->
        
    </div>
    <!-- /left content -->


    <!-- Right sidebar component -->
    <div class="sidebar sidebar-light bg-transparent sidebar-component sidebar-component-right wmin-300 border-0 shadow-0 order-1 order-md-2 sidebar-expand-md">

        <%= render "sidebar", title: 'Profile information' %>

    </div>
    <!-- /right sidebar component -->

</div>
<!-- /inner container -->