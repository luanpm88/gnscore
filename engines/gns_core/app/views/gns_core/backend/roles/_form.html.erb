<%= form_for([gns_core, :backend, role], html: {multipart: true}) do |f| %>
    <fieldset>
        <div class="form-group">
            <label class="d-block font-weight-semibold">Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control <%= 'border-danger' if role.errors.full_messages_for(:name).present? %>" placeholder="Enter role name"
                name="role[name]"
                value="<%= role.name %>"
            >
            <% if role.errors.full_messages_for(:name).present? %>
                <span class="form-text text-danger"><%= role.errors.full_messages_for(:name).join('<br/>').html_safe %></span>
            <% end %>
        </div>
    </fieldset>
    <fieldset>
        <div class="form-group">
            <div class="form-check form-check-inline form-check-right form-check-switchery">
                <label class="form-check-label">
                    Set active:
                    <input type="hidden" name="role[active]" value="false" />
                    <input type="checkbox" class="form-check-input-switchery"
                        name="role[active]"
                        value="true"
                    >
                </label>
            </div>
        </div>
    </fieldset>
    
    <hr class="mt-0">
    <div class="text-left">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-light ml-1" href="<%= gns_core.backend_roles_path %>">
            Cancel
        </a>
    </div>
<% end %>

<% content_for :page_script do %>
    <script>
        
    </script>
<% end %>