<!-- Main sidebar -->
<div class="sidebar sidebar-dark sidebar-main sidebar-fixed sidebar-expand-md">

    <!-- Sidebar mobile toggler -->
    <div class="sidebar-mobile-toggler text-center">
        <a href="#" class="sidebar-mobile-main-toggle">
            <i class="icon-arrow-left8"></i>
        </a>
        <%= t(".navigation") %>
        <a href="#" class="sidebar-mobile-expand">
            <i class="icon-screen-full"></i>
            <i class="icon-screen-normal"></i>
        </a>
    </div>
    <!-- /sidebar mobile toggler -->


    <!-- Sidebar content -->
    <div class="sidebar-content">

        <!-- User menu -->
        <div class="sidebar-user">
            <div class="card-body">
                <div class="media">
                    <div class="mr-3">
                        <img src="<%= current_user.avatar.present? ? current_user.avatar.system : url_for("/gns_ux/assets/backend/global/images/placeholders/placeholder.jpg") %>"
                            width="38" height="38" class="rounded-circle" alt="">
                        </a>
                    </div>

                    <div class="media-body">
                        <div class="media-title font-weight-semibold"><%= current_user.name %></div>
                        <div class="font-size-xs opacity-50">
                            <%= current_user.email %>
                        </div>
                    </div>

                    <div class="ml-3 align-self-center">
                        <a href="<%= gns_core.my_profile_backend_accounts_path %>"
                            class="text-white" title="<%= t(".account_settings") %>">
                            <i class="icon-cog3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /user menu -->


        <!-- Main navigation -->
        <div class="card card-sidebar-mobile">
            <ul class="nav nav-sidebar" data-nav-type="accordion">

                <!-- Main -->
                <li class="nav-item-header"><div class="text-uppercase font-size-xs line-height-xs"><%= t(".main_menu") %></div> <i class="icon-menu" title="Main"></i></li>
                <li class="nav-item">
                    <a href="<%= gns_core.root_path %>" class="nav-link"
                        data-menu="
                            gns_core/backend/dashboard
                        "
                    >
                        <i class="icon-home4"></i>
                        <span>
                            <%= t(".dashboard") %>
                        </span>
                    </a>
                </li>
                <li class="nav-item nav-item-submenu">
                    <a href="#" class="nav-link"
                        data-menu="
                            gns_contact/backend/contacts,
                            gns_contact/backend/categories
                        "
                    >
                        <i class="icon-address-book"></i> <span><%= t(".contact") %></span></a>

                    <ul class="nav nav-group-sub" data-submenu-title="Contact">
                        <li class="nav-item">
                            <a href="<%= gns_contact.backend_contacts_path %>" class="nav-link"
                                data-menu="
                                    gns_contact/backend/contacts
                                "
                            ><%= t(".contacts") %></a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_contact.backend_categories_path %>" class="nav-link"
                                data-menu="
                                    gns_contact/backend/categories
                                "
                            ><%= t(".contact_categories") %></a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item nav-item-submenu">
                    <a href="#" class="nav-link"
                        data-menu="
                            gns_project/backend/projects,
                            gns_project/backend/categories,
                            gns_project/backend/roles,
                            gns_project/backend/templates
                        "
                    ><i class="icon-task"></i> <span><%= t(".project") %></span></a>

                    <ul class="nav nav-group-sub" data-submenu-title="Project">
                        <li class="nav-item">
                            <a href="<%= gns_project.backend_projects_path %>" class="nav-link"
                                data-menu="
                                    gns_project/backend/projects
                                "
                            ><%= t(".projects") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_project.backend_categories_path %>" class="nav-link"
                                data-menu="
                                    gns_project/backend/categories
                                "
                            ><%= t(".project_types") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_project.backend_templates_path %>" class="nav-link"
                                data-menu="
                                    gns_project/backend/templates
                                "
                            ><%= t(".project_templates") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_project.backend_roles_path %>" class="nav-link"
                                data-menu="
                                    gns_project/backend/roles
                                "
                            ><%= t(".project_roles") %>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item nav-item-submenu">
                    <a href="#" class="nav-link"
                        data-menu="
                            gns_employee/backend/employees
                        "
                    ><i class="icon-collaboration"></i> <span><%= t(".employee") %></span></a>

                    <ul class="nav nav-group-sub" data-submenu-title="Employee">
                        <li class="nav-item">
                            <a href="<%= gns_employee.backend_employees_path %>" class="nav-link"
                                data-menu="
                                    gns_employee/backend/employees
                                "
                            ><%= t(".employees") %>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- /main -->

                <!-- Advanced -->
                <li class="nav-item-header"><div class="text-uppercase font-size-xs line-height-xs"><%= t(".advanced") %></div> <i class="icon-menu" title="Forms"></i></li>
                <li class="nav-item nav-item-submenu">
                    <a href="#" class="nav-link"
                        data-menu="
                            gns_report/backend/reports
                        "
                    ><i class="icon-stats-dots"></i> <span><%= t(".report") %></span></a>
                    <ul class="nav nav-group-sub" data-submenu-title="Report">
                        <li class="nav-item">
                            <a href="<%= gns_report.gantt_chart_backend_reports_path %>" class="nav-link"
                                data-menu="
                                    gns_report/backend/reports/gantt_chart
                                "
                            >
                                <%= t(".gantt_chart") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_report.project_report_backend_reports_path %>" class="nav-link"
                                data-menu="
                                    gns_report/backend/reports/project_report
                                "
                            >
                                <%= t(".project_report") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_report.employee_report_backend_reports_path %>" class="nav-link"
                                data-menu="
                                    gns_report/backend/reports/employee_report
                                "
                            >
                                <%= t(".employee_report") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_report.employee_working_hours_by_year_backend_reports_path %>" class="nav-link"
                                data-menu="
                                    gns_report/backend/reports/employee_working_hours_by_year
                                "
                            >
                                <%= t(".employee_working_hours_by_year") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_report.employee_working_hours_by_month_backend_reports_path %>" class="nav-link"
                                data-menu="
                                    gns_report/backend/reports/employee_working_hours_by_month
                                "
                            >
                                <%= t(".employee_working_hours_by_month") %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="<%= gns_report.project_working_hours_backend_reports_path %>" class="nav-link"
                                data-menu="
                                    gns_report/backend/reports/project_working_hours
                                "
                            >
                                <%= t(".project_working_hours") %>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item nav-item-submenu">
                    <a href="#" class="nav-link"
                       data-menu="
                            gns_core/backend/roles
                        "
                    >
                        <i class="icon-hammer-wrench"></i> <span><%= t(".system") %></span>
                    </a>
                    <ul class="nav nav-group-sub" data-submenu-title="System">
                        <li class="nav-item">
                            <a href="<%= gns_core.backend_roles_path %>" class="nav-link"
                                data-menu="
                                    gns_core/backend/roles
                                "
                            >
                                <i class="icon-user-check"></i><span><%= t(".configure_user_roles") %></span>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- /advanced -->

            </ul>
        </div>
        <!-- /main navigation -->

    </div>
    <!-- /sidebar content -->
    
</div>
<!-- /main sidebar -->